{
  "system_name": "temporal_llava_habitat",
  "version": "0.1.0",
  "components": {
    "habitat_simulator": {
      "scene_dataset": "data/replica_cad/replicaCAD.scene_dataset_config.json",
      "default_scene": "apt_0",
      "physics_enabled": false,
      "gpu_device": -1
    },
    "llava_interface": {
      "ollama_url": "http://localhost:11434",
      "model": "llava:latest",
      "timeout": 60
    },
    "temporal_fusion": {
      "lstm_hidden_dim": 256,
      "max_history": 10,
      "attention_heads": 8
    },
    "memory_system": {
      "max_short_term": 100,
      "max_episodic": 50,
      "environmental_memory_size": 200
    }
  },
  "evaluation": {
    "benchmark_tasks_path": "data/benchmark_tasks/",
    "results_output": "results/",
    "log_level": "INFO"
  }
}